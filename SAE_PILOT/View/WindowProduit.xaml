<Window
    x:Class="SAE_PILOT.View.WindowProduit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_PILOT.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WindowProduit"
    Width="500"
    Height="550"
    mc:Ignorable="d">
    <StackPanel
        x:Name="ckDispo"
        Width="300" Margin="100,23,100,28">
        <Label x:Name="labCode" Content="Code produit" />
        <TextBox
            x:Name="boxCode"
            Width="300"
            Text="{Binding CodeProduit, ValidatesOnExceptions=True}"
            TextWrapping="Wrap" Height="20" Margin="0,0,0,5" />
        <Label x:Name="labNom" Content="Nom" />
        <TextBox
            x:Name="boxNom"
            Width="300"
            Text="{Binding NomProduit, ValidatesOnExceptions=True}"
            TextWrapping="Wrap" Height="19" Margin="0,0,0,5" />
        <Label x:Name="labCat" Content="Categorie" />
        <ComboBox Width="120" HorizontalAlignment="Left" Margin="0,0,0,5"/>
        <Label x:Name="labType" Content="Type" />
        <ComboBox Width="120" HorizontalAlignment="Left" Margin="0,0,0,5"/>
        <!--<TextBox
            x:Name="boxType"
            Width="120"
            Text="{Binding LeType, ValidatesOnExceptions=True}"
            TextWrapping="Wrap" />-->
        <Label x:Name="labPointe" Content="Type de pointe" />
        <ComboBox Width="120" HorizontalAlignment="Left" Margin="0,0,0,5"/>
        <!--<TextBox
            x:Name="boxPointe"
            Width="120"
            Text="{Binding LeTypePointe, ValidatesOnExceptions=True}"
            TextWrapping="Wrap" />-->
        <Label x:Name="labCouleur" Content="Couleur" />
        <ComboBox Width="120" HorizontalAlignment="Left" Margin="0,0,0,5"/>
        <Label x:Name="labVente" Content="Prix de vente" />
        <TextBox
            x:Name="boxVente"
            Width="300"
            Text="{Binding PrixVente, ValidatesOnExceptions=True}"
            TextWrapping="Wrap" Height="20" Margin="0,0,0,5" />
        <Label x:Name="labStock" Content="Stock" />
        <TextBox
            x:Name="boxStock"
            Width="60"
            Text="{Binding QteStock, ValidatesOnExceptions=True}"
            TextWrapping="Wrap" Height="20" HorizontalAlignment="Left" Margin="0,0,0,15" />
        <CheckBox Content="Disponible" IsChecked="{Binding Disponible, ValidatesOnExceptions=True}" Margin="0,0,0,10" />
        <Button
            x:Name="butValiderProduit"
            Width="60"
            Height="25"
            Content="Valider" Background="#FF19459A" BorderBrush="{x:Null}" Foreground="White" />
        
    </StackPanel>
</Window>
