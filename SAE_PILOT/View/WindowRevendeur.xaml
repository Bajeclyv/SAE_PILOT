<Window
    x:Class="SAE_PILOT.View.WindowRevendeur"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_PILOT.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WindowRevendeur"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel
        x:Name="panelRevendeur"
        Width="250"
        Height="325"
        Margin="125,31,125,33">
        <Label
            x:Name="labSociale"
            Margin="0,0,0,5"
            Content="Raison _sociale"
            Target="{Binding ElementName=boxSociale}" />
        <TextBox
            x:Name="boxSociale"
            Width="250"
            Height="25"
            Margin="0,0,0,10"
            Text="{Binding RaisonSociale, ValidatesOnExceptions=True}"
            TextWrapping="Wrap" />
        <Label
            x:Name="labRue"
            Margin="0,0,0,5"
            Content="_Rue"
            Target="{Binding ElementName=boxRue}" />
        <TextBox
            x:Name="boxRue"
            Width="250"
            Height="25"
            Margin="0,0,0,10"
            Text="{Binding AsresseRue, ValidatesOnExceptions=True}"
            TextWrapping="Wrap" />
        <Label
            x:Name="labCP"
            Margin="0,0,0,5"
            Content="_Code postal"
            Target="{Binding ElementName=boxCP}" />
        <TextBox
            x:Name="boxCP"
            Width="250"
            Height="25"
            Margin="0,0,0,10"
            Text="{Binding AdresseCP, ValidatesOnExceptions=True}"
            TextWrapping="Wrap" />
        <Label
            Margin="0,0,0,5"
            Content="_Ville"
            Target="{Binding ElementName=boxVille}" />
        <TextBox
            x:Name="boxVille"
            Width="250"
            Height="25"
            Text="{Binding AdresseVille, ValidatesOnExceptions=True}"
            TextWrapping="Wrap" />
        <Button
            x:Name="butValiderRevendeur"
            Width="100"
            Height="25"
            Margin="0,30,0,0"
            Content="Valider" />
    </StackPanel>
</Window>
