<Window
    x:Class="SAE_PILOT.View.WindowRechercheProduit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_PILOT.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WindowRechercheProduit"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="cbCategorie" />
                <ComboBox x:Name="cbType" />
                <ComboBox x:Name="cbTypePointe" />
                <ComboBox x:Name="cbCouleur" />
            </StackPanel>
            <Button Content="Rechercher les produits" />
        </StackPanel>
        <DataGrid
            Height="200"
            Margin="28,98,29,152"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding LesProduits}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CodeProduit, ValidatesOnExceptions=true}"
                    Header="Code Produit" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NomProduit, ValidatesOnExceptions=true}"
                    Header="Nom Produit" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PrixVente, ValidatesOnExceptions=true}"
                    Header="Prix vente" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumType, ValidatesOnExceptions=true}"
                    Header="Type" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumTypePointe, ValidatesOnExceptions=true}"
                    Header="Type pointe" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding QteStock, ValidatesOnExceptions=true}"
                    Header="Quantité en stock" />
                <DataGridCheckBoxColumn
                    Width="*"
                    Binding="{Binding Disponible, ValidatesOnExceptions=true}"
                    Header="Disponible" />
            </DataGrid.Columns>
        </DataGrid>
        <Button
            x:Name="btnAjouterACommande"
            Margin="0,200,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Ajouter à la commande" />
    </Grid>
</Window>
