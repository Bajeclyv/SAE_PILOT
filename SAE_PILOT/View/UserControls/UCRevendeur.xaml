<UserControl
    x:Class="SAE_PILOT.View.UserControls.UCRevendeur"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_PILOT.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:SAE_PILOT.Model"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Label
            x:Name="labActionRevendeur"
            Margin="20,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Gestion des revendeurs"
            FontFamily="Rubik"
            FontSize="26"
            FontWeight="Bold"
            Foreground="#FF19459A" />
        <Button
            x:Name="butCreerRevendeur"
            Width="30"
            Height="30"
            Margin="28,346,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF19459A"
            BorderBrush="{x:Null}"
            Click="butCreerRevendeur_Click"
            Content="&#xE710;"
            FontFamily="Segoe MDL2 Assets"
            Foreground="#FFF8F6F6" />
        <Button
            x:Name="butModifierRevendeur"
            Width="30"
            Height="30"
            Margin="190,346,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF19459A"
            BorderBrush="{x:Null}"
            Click="butModifierRevendeur_Click"
            Content="&#xE70F;"
            FontFamily="Segoe MDL2 Assets"
            Foreground="#FFF8F6F6"
            RenderTransformOrigin="0.408,-0.057"
            ToolTip="Modifier" />
        <Button
            x:Name="butSupprimerRevendeur"
            Width="30"
            Height="30"
            Margin="349,346,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF19459A"
            BorderBrush="{x:Null}"
            Content="&#xE74D;"
            FontFamily="Segoe MDL2 Assets"
            Foreground="#FFF8F6F6"
            ToolTip="Supprimer" Click="butSupprimerRevendeur_Click" />
        <DataGrid
            x:Name="dgRevendeur"
            Height="200"
            Margin="28,117,29,133"
            AutoGenerateColumns="False"
            BorderBrush="#FF19459A"
            IsReadOnly="True"
            ItemsSource="{Binding LesRevendeurs}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding RaisonSociale, ValidatesOnExceptions=true}"
                    Header="Raison sociale" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AdresseRue, ValidatesOnExceptions=true}"
                    Header="Rue" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AdresseCP, ValidatesOnExceptions=true}"
                    Header="Code postal" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AdresseVille, ValidatesOnExceptions=true}"
                    Header="Ville" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox
            x:Name="txtSociale"
            Width="120"
            Margin="28,79,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="Gray"
            Text=""
            TextChanged="txtRevendeur_TextChanged"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="txtCPRevendeur"
            Width="120"
            Margin="210,79,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="Gray"
            Text=""
            TextChanged="txtRevendeur_TextChanged"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="txtVilleRevendeur"
            Width="120"
            Margin="400,79,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="Gray"
            Text=""
            TextChanged="txtRevendeur_TextChanged"
            TextWrapping="Wrap" />
        <Label
            Margin="22,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Raison sociale"
            Foreground="Gray" />
        <Label
            Margin="394,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Ville"
            Foreground="Gray" />
        <Label
            Margin="205,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Code postal"
            Foreground="Gray" />
    </Grid>
</UserControl>
