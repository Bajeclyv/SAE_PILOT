<UserControl
    x:Class="SAE_PILOT.View.UserControls.UCCommande"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_PILOT.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Label
            x:Name="labActionCom"
            Margin="28,22,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Gestion des commmandes"
            FontFamily="Rubik"
            FontSize="26"
            FontWeight="Bold"
            Foreground="#FF19459A" />
        <Button
            x:Name="butCreerCom"
            Width="30"
            Height="30"
            Margin="28,299,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF19459A"
            BorderBrush="{x:Null}"
            Content="&#xE710;"
            FontFamily="Segoe MDL2 Assets"
            Foreground="#FFF8F6F6"
            RenderTransformOrigin="0.534,0.038"
            ToolTip="Ajouter" Click="butCreerCom_Click" />
        <Button
            x:Name="butModifierCom"
            Width="30"
            Height="30"
            Margin="204,299,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF19459A"
            BorderBrush="{x:Null}"
            Content="&#xE70F;"
            FontFamily="Segoe MDL2 Assets"
            Foreground="#FFF8F6F6"
            RenderTransformOrigin="0.408,-0.057"
            ToolTip="Modifier" />
        <Button
            x:Name="butSupprimerCom"
            Width="30"
            Height="30"
            Margin="349,299,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF19459A"
            BorderBrush="{x:Null}"
            Content="&#xE74D;"
            FontFamily="Segoe MDL2 Assets"
            Foreground="#FFF8F6F6"
            ToolTip="Supprimer" />
        <DataGrid
            Height="200"
            Margin="28,98,400,152"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding LesCommandes}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumEmploye, ValidatesOnExceptions=true}"
                    Header="Employé" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumTransport, ValidatesOnExceptions=true}"
                    Header="Transport" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumRevendeur, ValidatesOnExceptions=true}"
                    Header="Revendeur" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DateCommande, ValidatesOnExceptions=true}"
                    Header="Date commande" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DateLivraison, ValidatesOnExceptions=true}"
                    Header="Date livraison" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
