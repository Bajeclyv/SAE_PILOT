<UserControl
    x:Class="SAE_PILOT.View.UserControls.UCConnexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_PILOT.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:SAE_PILOT.Model"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <model:Employe x:Key="UnEmploye" />
    </UserControl.Resources>
    <StackPanel
        x:Name="panelConnexion"
        Width="200"
        Margin="396,131,0,60"
        HorizontalAlignment="Left">
        <Label
            x:Name="titleConnexion"
            Margin="0,0,0,20"
            Content="Connexion"
            FontFamily="Rubik"
            FontSize="20"
            FontWeight="Bold"
            RenderTransformOrigin="-0.078,0.709" />
        <Label
            x:Name="labLog"
            Margin="0,0,0,5"
            Content="Login"
            FontFamily="Rubik" />
        <TextBox
            Width="200"
            Margin="0,0,0,10"
            Text=""
            TextWrapping="Wrap" />
        <Label
            x:Name="labMDP"
            Margin="0,0,0,5"
            Content="Mot de passe"
            FontFamily="Rubik" />
        <TextBox
            Width="200"
            Text=""
            TextWrapping="Wrap" />
        <Button
            x:Name="butValiderConnexion"
            Width="80"
            Height="25"
            Margin="0,30,0,0"
            Background="{x:Null}"
            BorderBrush="#FFABADB3"
            Content="Se connecter" />
    </StackPanel>
</UserControl>
