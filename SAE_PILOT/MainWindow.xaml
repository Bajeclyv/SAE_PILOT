<Window
    x:Class="SAE_PILOT.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_PILOT.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1000"
    Height="600"
    xml:lang="fr-FR"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Column="0"
            Margin="0,0,0,0"
            Background="#FF19459A">
            <Button
                x:Name="butRevendeur"
                Margin="20,228,0,20"
                HorizontalAlignment="Left"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Click="butRevendeur_Click"
                Content="Revendeur"
                FontFamily="Rubik"
                FontSize="20"
                Foreground="#FFF7F6F6" />
            <Button
                x:Name="butCommande"
                Margin="20,0,0,20"
                HorizontalAlignment="Left"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Click="butCommande_Click"
                Content="Commande"
                FontFamily="Rubik"
                FontSize="20"
                Foreground="#FFF7F6F6" />
            <Button
                x:Name="butProduit"
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Click="butProduit_Click"
                Content="Produit"
                FontFamily="Rubik"
                FontSize="20"
                Foreground="#FFF7F6F6" />
        </StackPanel>

        <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <ContentControl
                x:Name="MainContent"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />

        </StackPanel>
        <StackPanel
            Grid.Column="1"
            Height="71"
            Margin="359,13,126,0"
            VerticalAlignment="Top">
            <Image
                Width="255"
                Height="68"
                Source="/img/pilot.png"
                Stretch="Fill" />
        </StackPanel>
        <Label
            Grid.Column="1"
            Margin="102,46,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Bienvenue chez"
            FontFamily="Rubik"
            FontSize="32"
            FontWeight="Bold"
            Foreground="#FF19459A" />
    </Grid>
</Window>
