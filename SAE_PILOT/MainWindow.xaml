<Window
    x:Class="SAE_PILOT.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_PILOT.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid Grid.Row="1">
        <local:UCConnexion />
        <StackPanel Margin="0,0,588,0" Background="#FF19459A">
            <Button
                x:Name="butRevendeur"
                Margin="20,150,0,20"
                HorizontalAlignment="Left"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Content="Revendeur"
                FontFamily="Rubik"
                FontSize="16"
                Foreground="#FFF7F6F6" />
            <Button
                x:Name="butCommande"
                Margin="20,0,0,20"
                HorizontalAlignment="Left"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Content="Commande"
                FontFamily="Rubik"
                FontSize="16"
                Foreground="#FFF7F6F6" />
            <Button
                x:Name="butProduit"
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Content="Produit"
                FontFamily="Rubik"
                FontSize="16"
                Foreground="#FFF7F6F6" />
        </StackPanel>
        <Label
            x:Name="labBienvenue"
            Margin="326,46,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{x:Null}"
            Content="Bienvenue sur "
            FontFamily="Rubik"
            FontSize="26"
            FontWeight="Bold"
            Foreground="#FF016BB7" />
        <Image
            Margin="533,46,148,356"
            Source="/img/pilot.png"
            Stretch="Fill" />
    </Grid>
</Window>
